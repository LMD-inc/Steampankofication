{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Client (Mono)",
			"type": "mono",
			"request": "launch",
			"preLaunchTask": "Build (Debug)",
			"program": "${env:VINTAGE_STORY}/Vintagestory.exe",
			"args": [
				"--playStyle",
				"preset-creativeandbuild",
				"--openWorld",
				"[SFK] Testing world",
				"--addModPath",
				"${workspaceFolder}/bin/sfksteamworks/net461/",
				"${workspaceFolder}/bin/sfktransportation/net461/",
				"${workspaceFolder}/bin/sfkapi/net461/",
				"--addOrigin",
				"${workspaceFolder}/resources/assets/"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Launch Client (.NET)",
			"type": "clr",
			"request": "launch",
			"preLaunchTask": "Build (Debug)",
			"program": "${env:VINTAGE_STORY}/Vintagestory.exe",
			"args": [
				"--playStyle",
				"creativeandbuild",
				"--openWorld",
				"[SFK] Testing world",
				"--addModPath",
				"${workspaceFolder}/bin/sfksteamworks/net461/",
				"${workspaceFolder}/bin/sfktransportation/net461/",
				"${workspaceFolder}/bin/sfkapi/net461/",
				"--addOrigin",
				"${workspaceFolder}/resources/assets/"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Launch Client (.NET) | Release",
			"type": "clr",
			"request": "launch",
			"preLaunchTask": "Build (Debug)",
			"program": "${env:VINTAGE_STORY}/Vintagestory.exe",
			"args": [
				"--playStyle",
				"creativeandbuild",
				"--openWorld",
				"[SFK] Testing world",
				"--addModPath",
				"${workspaceFolder}/build/",
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
